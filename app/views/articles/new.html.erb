<%= form_with scope: :article, url: create_article_path, local: true do |f| %>
    <p>
        <% if @article.errors.any? %>
            <ul>
                <% @article.errors.full_messages.each do |message| %>
                    <li>
                        <%= message %>
                    </li>
                <% end %>
            </ul> 
        <% end %>
    </p>
    <p> 
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :body %>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
    <%= link_to 'Back to articles', articles_path %>
<% end %>